@model com.cake_lovers.www.Models.ModelView.ClienteModelView

@{
    ViewData["Title"] = "Clientes";
}

<h5 class="display-6"><span class="display-6 text-info"><i class="fa fa-solid fa-person"></i> Gerenciar clientes </span></h5>

<br />
<a class="btn btn-primary" title="Voltar" asp-action="Index" asp-controller="Home"><i class="fa fa-arrow-circle-left"></i> Voltar</a>
<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="mdo"><i class="fa fa-plus-circle"></i> Adicionar Cliente</button>
<br />
<hr />


<div class="modal fade modal-dialog modal-lg" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Adicionar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateCadastroFamiliar">
                    <div class="row">
                        <div class="mt-3 col-sm-3">
                            <label class="form-label" asp-for="NovoCliente.NomeCompleto"></label>
                            <input class="form-control" asp-for="NovoCliente.NomeCompleto" />
                        </div>
                        <div class="mt-3 col-sm-6">
                            <label class="form-label" asp-for="NovoCliente.Email"></label>
                            <input class="form-control" asp-for="NovoCliente.Email" />
                        </div>
                        <div class="mt-3 col-sm-3">
                            <label class="form-label" asp-for="NovoCliente.Telefone"></label>
                            <input class="form-control" asp-for="NovoCliente.Telefone" />
                        </div>

                    </div>
                    <div class="row">
                        <div class="mt-3 col-sm-3">
                            <label class="form-label" asp-for="NovoEndereco.CEP"></label>
                            <input class="form-control" asp-for="NovoEndereco.CEP" />
                        </div>
                        <div class="mt-3 col-sm-6">
                            <label class="form-label" asp-for="NovoEndereco.Rua"></label>
                            <input class="form-control" asp-for="NovoEndereco.Rua" />
                        </div>
                        <div class="mt-3 col-sm-6">
                            <label class="form-label" asp-for="NovoEndereco.Cidade"></label>
                            <input class="form-control" asp-for="NovoEndereco.Cidade" />
                        </div>
                        <div class="mt-3 col-sm-6">
                            <label class="form-label" asp-for="NovoEndereco.Estado"></label>
                            <input class="form-control" asp-for="NovoEndereco.Estado" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button class="btn btn-success" type="submit"><i class="fa fa-check-circle"></i> Salvar Familiar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<h5 class="mt-5">PRODUTOS REGISTRADOS</h5>
<div class="row">
    <div class="row">

        <table class="table table-striped table-sm fs-6" id="tabela-familiares">
            <thead>
                <tr>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Clientes[0].ClientId)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Clientes[0].NomeCompleto)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Clientes[0].Telefone)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Clientes[0].Email)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Clientes.Count() > 0)
                {
                    for (int i = 0; i < Model.Clientes.Count(); i++)
                    {
                        <tr>
                            <td class="col-2 text-center">@Html.DisplayFor(model => model.Clientes[i].ClientId)</td>
                            <td class="col-2 text-center">@Html.DisplayFor(model => model.Clientes[i].NomeCompleto)</td>
                            <td class="col-2 text-center">@Html.DisplayFor(model => model.Clientes[i].Telefone)</td>
                            <td class="col-2 text-center">@Html.DisplayFor(model => model.Clientes[i].Email)</td>
                            <td class="col-2 text-center align-middle">
                                <a class="btn btn-sm btn-danger" asp-action="DeleteCliente" asp-route-idCliente="@Model.Clientes[i].ClientId"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

