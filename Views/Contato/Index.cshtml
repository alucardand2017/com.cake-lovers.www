@model List<com.cake_lovers.www.Models.Contato>

@{
    ViewData["Title"] = "Contatos";
}

<h5 class="display-6"><span class="display-6 text-info"><i class="fa fa-solid fa-person"></i> Gerenciar Contatos </span></h5>

<br />
<a class="btn btn-primary" title="Voltar" asp-action="Index" asp-controller="Home"><i class="fa fa-arrow-circle-left"></i> Voltar</a>
<br />
<hr />




<h5 class="mt-5">CONTATOS RECEBIDOS</h5>
<div class="row">
    <div class="row">

        <table class="table table-striped table-sm fs-6" id="tabela-familiares">
            <thead>
                <tr>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model[0].Date)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model[0].Nome)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model[0].Email)</th>
                    <th class="text-center col-4">@Html.DisplayNameFor(model => model[0].Mensagem)</th>
                    <th class="text-center col-2">AÇÕES</th>

                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td class="col-2 text-center">@Html.DisplayFor(model => model[i].Date)</td>
                            <td class="col-2 text-center">@Html.DisplayFor(model => model[i].Nome)</td>
                            <td class="col-2 text-center">@Html.DisplayFor(model => model[i].Email)</td>
                            <td class="col-4 text-center">@Html.DisplayFor(model => model[i].Mensagem)</td>
                            <td class="col-2 text-center align-middle">
                                <a class="btn btn-sm btn-danger" asp-action="DeleteContato" asp-route-idCliente="@Model[i].ContatoId"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

