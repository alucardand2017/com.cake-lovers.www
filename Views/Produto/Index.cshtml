@model com.cake_lovers.www.Models.ModelView.ProdutoEscolhaModelView

@{
    ViewData["Title"] = "CupCakes";
}

<h5 class="display-6"><span class="display-6 text-info"><i class="fa fa-solid fa-person"></i> Gerenciar Cupcakes </span></h5>

<br />
<a class="btn btn-primary" title="Voltar" asp-action="Index" asp-controller="Home"><i class="fa fa-arrow-circle-left"></i> Voltar</a>
<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="mdo"><i class="fa fa-plus-circle"></i> Adicionar CupCake</button>
<br />
<hr />


<div class="modal fade modal-dialog modal-lg" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Adicionar Familiar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateCadastroFamiliar">
                    <div class="row">
                        <div class="mt-3 col-sm-3">
                            <label class="form-label" asp-for="NovoProduto.NomeProduto"></label>
                            <input class="form-control" asp-for="NovoProduto.NomeProduto" />
                        </div>
                        <div class="mt-3 col-sm-6">
                            <label class="form-label" asp-for="NovoProduto.Preco"></label>
                            <input class="form-control" asp-for="NovoProduto.Preco" />
                        </div>
                        <div class="mt-3 col-sm-3">
                            <label class="form-label" asp-for="NovoProduto.Estoque"></label>
                            <input class="form-control" asp-for="NovoProduto.Estoque" />
                        </div>

                    </div>
                    <div class="row">
                        <div class="mt-3 col-sm-6">
                            <label class="form-label" asp-for="NovoProduto.CaminhoFoto"></label>
                            <input class="form-control" asp-for="NovoProduto.Estoque" />
                        </div>
                        <div class="mt-3 col-sm-3">
                            <label class="form-label" asp-for="NovoProduto.Estoque"></label>
                            <input class="form-control" asp-for="NovoProduto.Estoque" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button class="btn btn-success" type="submit"><i class="fa fa-check-circle"></i> Salvar Familiar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<h5 class="mt-5">PRODUTOS REGISTRADOS</h5>
<div class="row">
    <div class="row">

        <table class="table table-striped table-sm fs-6" id="tabela-familiares">
            <thead>
                <tr>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Produtos[0].CaminhoFoto)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Produtos[0].ProdutoId)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Produtos[0].NomeProduto)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Produtos[0].Preco)</th>
                    <th class="text-center col-2">@Html.DisplayNameFor(model => model.Produtos[0].Estoque)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Produtos.Count() > 0)
                    {
                        for (int i = 0; i < Model.Produtos.Count(); i++)
                        {
                            <tr>
                                <td class="col-2 text-center">@Html.DisplayFor(model => model.Produtos[i].CaminhoFoto)</td>
                                <td class="col-2 text-center">@Html.DisplayFor(model => model.Produtos[i].ProdutoId)</td>
                                <td class="col-2 text-center">@Html.DisplayFor(model => model.Produtos[i].NomeProduto)</td>
                                <td class="col-2 text-center">@Html.DisplayFor(model => model.Produtos[i].Preco.ToString("C",new System.Globalization.CultureInfo("pt-BR")))</td>
                                <td class="col-2 text-center align-middle">
                                    <a class="btn btn-sm btn-danger" asp-action="DeleteFamiliar" asp-route-idProduto="@Model.Produtos[i].ProdutoId"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

