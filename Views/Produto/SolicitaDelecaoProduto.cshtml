@model com.cake_lovers.www.Models.Produto

@{
    ViewData["Title"] = "CupCakes";
}

<h5 class="display-6"><span class="display-6 text-info"><i class="fa fa-solid fa-person"></i> Deletar Cupcake </span></h5>


<p> Deseja deletar o produto <b>>@Model.NomeProduto </b> - @Model.Descricao - @Model.Preco.ToString("C")</p>

<br />
<a class="btn btn-primary" title="Voltar" asp-action="Index" asp-controller="Produto" ><i class="fa fa-arrow-circle-left"></i> Voltar</a>
<a class="btn btn-danger" title="Deletar" asp-action="DeletarProduto" asp-route-id="@Model.Id"><i class="fa fa-trash"></i> Deletar</a>
<br />
<hr />



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
       }