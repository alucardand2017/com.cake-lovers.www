@model com.cake_lovers.www.Models.ModelView.CarrinhoModel

@{
    ViewData["Title"] = "Comprar";
}

<div class="text-center">
    <img src="~/images/logo.jpg" alt="Logo da Loja" style="height: 150px;">
    <h1 class="display-4">Cake-Lovers</h1>
    <h3>Um mundo com cupcakes é um mundo melhor!</h3>
</div>
<div class="container mt-5">
    <h2 class="mb-4">Carrinho de Compras</h2>
    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Produto</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Subtotal</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <!-- Item 1 do Carrinho -->
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="imagem-produto1.jpg" class="img-thumbnail me-3" alt="Produto 1" style="width: 80px;">
                            <span>Produto 1</span>
                        </div>
                    </td>
                    <td>R$ 100,00</td>
                    <td>
                        <input type="number" class="form-control" value="1" min="1" style="width: 70px;">
                    </td>
                    <td>R$ 100,00</td>
                    <td>
                        <button class="btn btn-danger btn-sm">Remover</button>
                    </td>
                </tr>

                <!-- Item 2 do Carrinho -->
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="imagem-produto2.jpg" class="img-thumbnail me-3" alt="Produto 2" style="width: 80px;">
                            <span>Produto 2</span>
                        </div>
                    </td>
                    <td>R$ 50,00</td>
                    <td>
                        <input type="number" class="form-control" value="2" min="1" style="width: 70px;">
                    </td>
                    <td>R$ 100,00</td>
                    <td>
                        <button class="btn btn-danger btn-sm">Remover</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Total e Botões -->
    <div class="row">
        <div class="col-md-6 offset-md-6">
            <div class="d-flex justify-content-between align-items-center border-top pt-3">
                <h5>Total Geral:</h5>
                <h5>R$ 200,00</h5>
            </div>
            <button class="btn btn-primary w-100 mt-3">Finalizar Compra</button>
        </div>
    </div>
</div>
